<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uco.captainplanet.myapplication.MainActivity"
    android:textAlignment="center"
    android:layout_gravity="center_vertical|center_horizontal">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        app:itemBackground="@drawable/pressed_gray"
        android:layout_gravity="start"
        android:id="@+id/navigationView">
    </android.support.design.widget.NavigationView>


    <android.widget.TextView android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="Welcome to \n CityLink \n Bus Tracking System"
        tools:textAlignment="center"
        android:gravity="center"
        android:textSize="35sp"
        android:id="@+id/frontSplash">



    </android.widget.TextView>

</android.support.v4.widget.DrawerLayout>
